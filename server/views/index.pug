extends layout

block content
  div(class='mdl-grid')
    div(class='mdl-cell mdl-cell--4-col')
      h1 Welcome back, #{user.username}!
  div(class='mdl-grid')
    div(class='mdl-cell mdl-cell--3-col')
      div(class='demo-card-square demo-card-square-img mdl-card mdl-shadow--2dp')
        div(class='mdl-card__title mdl-card--expand')
          h2(class='mdl-card__title-text') Posts
        div(class='mdl-card__supporting-text') Create, edit or delete posts.
        div(class='mdl-card__actions mdl-card--border')
          a(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', href='/admin/posts') Go to posts
    div(class='mdl-cell mdl-cell--3-col')
      div(class='demo-card-square demo-card-square-img mdl-card mdl-shadow--2dp')
        div(class='mdl-card__title mdl-card--expand')
          h2(class='mdl-card__title-text') Events
        div(class='mdl-card__supporting-text') Create, edit or delete events.
        div(class='mdl-card__actions mdl-card--border')
          a(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', href='/admin/events') Go to events
          div(class='mdl-cell mdl-cell--3-col')
    if tempFilesExist
      div(class='demo-card-square mdl-card mdl-shadow--2dp')
        div(class='mdl-card__title mdl-card--expand')
          h2(class='mdl-card__title-text') Temp Files
        div(class='mdl-card__supporting-text') Please delete temp files
        div(class='mdl-card__actions mdl-card--border')
          button(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', onclick='deleteTempFiles()') Delete